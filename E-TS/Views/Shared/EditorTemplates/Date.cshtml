@model DateTime?

    <div class="form-group">
        <label asp-for="@Model" class="control-label"></label>
        <div class="input-group date" id="reservationdate" data-target-input="nearest">
            <input asp-for="@Model" type="text" class="form-control datetimepicker-input" autocomplete="off" data-target="#reservationdate" value="@(Model.HasValue && Model.Value > DateTime.MinValue ? Model.Value.ToString("dd.MM.yyyy") : String.Empty)"/>
            <div class="input-group-append" data-target="#reservationdate" data-toggle="datetimepicker">
                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
            </div>
        </div>
        <span asp-validation-for="@Model" class="text-danger"></span>
    </div>