@{
    ViewData["Title"] = "Количка";
    string[] TableHeaders = new string[] { "Продукт", "Информация", "Цена", "Действия" };
    double sum = 0.0;
    foreach (var item in Model)
    {
        sum += item.Price;
    }
    sum = Math.Round(sum, 2);
}

<div class="card">
    <div class="card-body">

        <div class="table">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        @foreach (var header in TableHeaders)
                        {
                            <th>
                                @header
                            </th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var r in Model)
                        {
                            <tr>
                                <td>@r.Product</td>
                                <td>@r.Detail</td>
                                <td>@r.Price</td>
                                <td>
                                    <a href="@Url.Action("Buy", "Cart")?Id=@r.Id&Table=@r.Table" class="btn btn-primary" style="margin-right: 15px;"><i class="fas fa-shopping-cart"></i>Купи</a>
                                    <a href="@Url.Action("Remove", "Cart")?Id=@r.Id&Table=@r.Table" class="btn btn-danger"><i class="fas fa-times"></i></a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<div class="row">
    <div class="card col-md-12">
        <div class="card-body">
            <div class="col-md-12 text-right pb-15">
                <label style="font-size: x-large;">
                    <b>Общо: @sum лева</b>
                </label>
                <a href="@Url.Action("BuyAll", "Cart")" class="btn btn-success">
                    <i class="fas fa-shopping-cart"></i>
                    Закупи
                </a>
            </div>
        </div>
    </div>
</div>
