    }

    .btnT__icon {
        width: 24px;
        height: 24px;
        background-color: #fff;
        border: 0px solid #319bef;
        border-radius: 50%;
        display: inline-block;
        top: 11px;
        position: absolute;
        left: 20px;
    }

    .btnT .btnT__icon:before {
        content: '';
