@model E_TS.ViewModels.RegisterViewModel

<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">Регистрация</h3>
    </div>
    <form asp-action="Register" method="post" class="form-horizontal">
        <div class="card-body col-md-9">
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Имейл</label>
                <div class="col-sm-10">
                    <input type="email" asp-for="@Model.Email" class="form-control" id="inputEmail3" placeholder="Имейл">
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Парола</label>
                <div class="col-sm-10">
                    <input type="password" asp-for="@Model.Password" class="form-control" id="inputPassword3" placeholder="Парола">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Повтори парола</label>
                <div class="col-sm-10">
                    <input type="password" asp-for="@Model.PasswordCheck" class="form-control" id="inputPassword3" placeholder="Повтори парола">
                    <span asp-validation-for="@Model.PasswordCheck" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Адрес</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="@Model.Address" placeholder="Адрес">
                    <span asp-validation-for="@Model.Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Телефонен номер</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="@Model.PhoneNumber" placeholder="Телефонен номер">
                    <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Имена</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="@Model.Name" placeholder="Имена">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="@Model.DateOfBirth" class="col-sm-2 col-form-label">Дата на раждане</label>
                <div class="input-group date col-sm-10" id="reservationdatetime" data-target-input="nearest">
                    <input asp-for="@Model.DateOfBirth" type="text" class="form-control datetimepicker-input" autocomplete="off" data-target="#reservationdatetime" value="@(Model.DateOfBirth > DateTime.MinValue ? Model.DateOfBirth.ToString("dd.MM.yyyy") : String.Empty)" />
                    <div class="input-group-append" data-target="#reservationdatetime" data-toggle="datetimepicker">
                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                    </div>
                </div>
                <span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-info">Регистриране</button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-danger">Откажи</a>
        </div>
    </form>
</div>

@section scripts {
    <script>
        (function () {
            $('#reservationdatetime').datetimepicker({ icons: { time: 'far fa-clock' }, autoclose: true });
        })();
    </script>

}