@model E_TS.ViewModels.ECard.ECardViewModel

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Зареждане на карта</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form asp-action="RechargeCard" method="post" role="form">
        @Html.HiddenFor(c => c.UserId)
        @Html.HiddenFor(c => c.Id)
        <div class="card-body">
            <div class="form-group">
                <label for="transportType">Превозно срество: </label>
                @Html.DropDownListFor(n => n.TransportType, Model.TransportTypes, "Всички")
            </div>
            <div class="form-group">
                <label for="numberOfTransport">Номер на транспорта: </label>
                @Html.DropDownListFor(n => n.TransportNumber, Model.TransportLines, "Всички")
            </div>
            <div class="form-group">
                @Html.EditorFor(r => r.ValidFrom, "DateTime")
            </div>
            <div class="form-group row">
                <label asp-for="@Model.ValidTo" class="col-form-label">Валидна до</label>
                <div class="input-group date" id="validTo" data-target-input="nearest">
                    <input asp-for="@Model.ValidTo" type="text" class="form-control datetimepicker-input" autocomplete="off" data-target="#validTo" value="@(Model.ValidTo > DateTime.MinValue ? Model.ValidTo.ToString("dd.MM.yyyy") : String.Empty)" />
                    <div class="input-group-append" data-target="#validTo" data-toggle="datetimepicker">
                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                    </div>
                </div>
                <span asp-validation-for="@Model.ValidTo" class="text-danger"></span>
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Зареди</button>
        </div>
    </form>
</div>

@section scripts {
    <script>
        (function () {
            $('#reservationdatetime').datetimepicker({ icons: { time: 'far fa-clock' }, autoclose: true });
            $('#validTo').datetimepicker({ icons: { time: 'far fa-clock' }, autoclose: true });
        })();
    </script>
}